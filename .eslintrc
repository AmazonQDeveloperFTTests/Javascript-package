{
  "root": true,
  "extends": "airbnb",
  "plugins": ["jest"],
  "env": {
    "jest/globals": true
  },
  "parser": "@babel/eslint-parser",
  "rules": {
    "linebreak-style": 0,
    "no-bitwise": "off",
    "no-lonely-if": "off",
    "class-methods-use-this": "off",
    "arrow-body-style": "off",
    "no-loop-func": "off"
  },
  "settings": {
    "react": {
      "version": "latest"
    }
  }
}
